<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangshan.dao.NoteBookGroupDao">
    <resultMap id="NoteBookGroupResult" type="Note">
        <id property="id" column="id"/>
        <result property="name" column="name" />
        <result property="remark" column="remark"/>
        <result property="state" column="state_id"/>
        <result property="createon" column="create_on"/>
        <result property="updateon" column="update_on"/>
    </resultMap>
    <insert id="insertNoteBookGroup" parameterType="Note" keyProperty="id">
        insert into note( name, remark, state, createon, updateon)
        values
        (#{name},#{remark},#{state},#{createon},#{updateon})
    </insert>

    <select id="selectNoteBookGroups" resultMap="NoteBookGroupResult">
        select * from Note
    </select>

</mapper>