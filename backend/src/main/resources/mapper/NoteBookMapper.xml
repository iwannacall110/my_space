<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangshan.dao.NoteBookDao">
    <resultMap id="NoteBookResult" type="NoteBook">
        <id property="id" column="nb_id"/>
        <result property="name" column="nb_name"/>
        <result property="noteBookGroup" column="nb_note_book_group_id"/>
        <result property="remark" column="nb_remark"/>
        <result property="state" column="nb_state_id"/>
        <result property="createon" column="nb_create_on"/>
        <result property="updateon" column="nb_update_on"/>
    </resultMap>

    <resultMap id="NoteBookFormResult" type="NoteBookForm">
        <association property="noteBook" javaType="NoteBook" resultMap="NoteBookResult"/>
        <collection property="noteList" ofType="Note" resultMap="com.wangshan.dao.NoteDao.NoteResult"></collection>
    </resultMap>

    <select id="selectNoteBooks" resultMap="NoteBookFormResult">
         select * from note_book left join note on note_book.id = note.note_book_id
    </select>

</mapper>